<h1 class="title">Regístrate</h1>

<form action="/usuarios/signup" method="POST">

    <label for="nombre">Nombre:</label>
    <input required name="nombre" id="nombre" class="input is-rounded" type="text" placeholder="Escribe tu nombre">
    <br><br>
    <label for="username">Username:</label>
    <input name="username" id="username" class="input is-rounded" type="text" placeholder="Escribe tu username">
    <br><br>
    <label for="password">Contraseña:</label>
    <input name="password" id="password" class="input is-rounded" type="password">
    <br><br>
    <input class="button is-rounded is-success" type="submit" value="Registrar">

</form>

